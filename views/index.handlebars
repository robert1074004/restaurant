<container><div class="col-md-6 d-flex justify-content-between align-items-end  mt-4 mx-auto">
  <!-- search bar -->
  
        <form action="/search" class="my-0">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major btn-lg" type="submit" id="search-button"><i
                  class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
  {{!-- dropdown --}}
  <div class="dropdown ">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
    sort
  </a>

  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <li><a class="dropdown-item" href="/">A -> Z</a></li>
    <li><a class="dropdown-item" href="/desc">Z -> A</a></li>
    <li><a class="dropdown-item" href="/category">類別</a></li>
  </ul>
</div>
</div></container>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-9 col-12 mx-auto ps-5">
      <div class="card-columns d-flex flex-wrap">
        {{# each restaurant}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div>
            <div class="card mb-3 me-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
            </div>
            <div class="text-end mb-3 col-11">
              <a class="btn btn-primary btn-sm" data-bs-toggle="offcanvas" href="./restaurants/{{this._id}}"
                role="button" aria-controls="offcanvasExample">
                detail
              </a>
              <a class="btn btn-primary btn-sm" data-bs-toggle="offcanvas" href="./restaurants/{{this._id}}/edit"
                role="button" aria-controls="offcanvasExample">
                edit
              </a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-primary btn-sm">delete</button>
              </form>
            </div>
          </div>

        </a>


        {{/each}}